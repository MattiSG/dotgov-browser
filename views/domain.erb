<h2><%= domain["domain"] %></h2>

<div class="row">
  <div class="col-sm-8">
  <table>
    <% domain.each do |key,value| %>
      <% next if key[0] == "_" %>
      <tr>
        <th><%= key %></th>
        <td class="<%= value %>"><%= value %></td>
      </tr>
    <% end %>
    <tr>
      <% if redirects.has_next? %>
        <th>Redirects from</th>
        <td>
          <ul>
            <% redirects.each do |redirect| %>
              <li><a href="/domains/<%= redirect["domain"] %>"><%= redirect["domain"] %></li>
            <% end %>
          </ul>
        </td>
      <% end %>
  </table>
</div>
<div class="col-sm-4">

  <div class="do-it-live">
    <p>
      Something look funky?<br />
      <a href="https://gov-inspector.herokuapp.com/domains/<%= domain["domain"] %>">WE'LL DO IT LIVE!</a>
    </p>
  </div>

</div>
